<!--
  ==========================================================================
  Project element

  See: https://www.phing.info/docs/stable/hlhtml/index.html#Project
  ==========================================================================
-->
<!ELEMENT project (property)*>
<!ATTLIST project name IDREF #IMPLIED>
<!ATTLIST project basedir CDATA #IMPLIED>
<!ATTLIST project description CDATA #IMPLIED>
<!ATTLIST project default CDATA #REQUIRED>
<!ATTLIST project phingVersion CDATA #IMPLIED>

<!--
  ==========================================================================
  Target element

  See: https://www.phing.info/docs/stable/hlhtml/index.html#Target
  ==========================================================================
-->
<!ELEMENT target ANY>
<!ATTLIST target depends CDATA #IMPLIED>
<!ATTLIST target description CDATA #IMPLIED>
<!ATTLIST target if CDATA #IMPLIED>
<!ATTLIST target name CDATA #REQUIRED>
<!ATTLIST target unless CDATA #IMPLIED>
<!ATTLIST target hidden (true|false) "false">
<!ATTLIST target logskipped (true|false) "false">

<!--
   - See: https://www.phing.info/docs/stable/hlhtml/index.html#PropertyTask
   -->
<!ELEMENT property (filterchain?)>
<!ATTLIST property name ID #IMPLIED>
<!ATTLIST property value CDATA #IMPLIED>
<!ATTLIST property environment CDATA #IMPLIED>
<!ATTLIST property file CDATA #IMPLIED>
<!ATTLIST property override (true|false) "false">
<!ATTLIST property prefix CDATA #IMPLIED>
<!ATTLIST property refid IDREF #IMPLIED>
<!ATTLIST property fallback CDATA #IMPLIED>
<!ATTLIST property logoutput (true|false) "true">

<!--
   - https://www.phing.info/docs/stable/hlhtml/index.html#app.corefilters
   -->
<!ELEMENT filterchain ANY>



















